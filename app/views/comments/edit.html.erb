<h2>Edit Comment</h2>

<%= form_with model: @comment do |f| %>
  <div class="form-group">
    <%= f.text_area :content, class: "form-control", placeholder: "What's on your mind?" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Comment", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back', @post %>
